---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID, isCVPage } = Astro.props;
---

<div class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside class="px-2 pt-2 h-auto min-h-full w-[19rem] bg-base-300 text-base-content flex flex-col shadow-[0_0_15px_3px_theme('colors.base.200')]">
    <div class="w-fit mx-auto mt-5 mb-6">
      <a href="/">
        <div class={`avatar transition ease-in-out hover:scale-[102%] block m-auto ${isCVPage ? 'avatar-cv-animated' : ''}`}>
          <div class="ring-primary ring-offset-base-100 rounded-full ring-2 ring-offset-2 w-[8.5rem] relative overflow-hidden avatar-fade">
            <Image
              class={`mask ${isCVPage ? "opacity-0" : "opacity-100"} mask-circle absolute inset-0 transition-opacity duration-200 ease-in-out`}
              format="webp"
              width={300}
              height={300}
              style="transform: scale(0.9);" 
              src="/AvatarCP.jpg"
              alt="Avatar CP"
            />
            <Image
              class={`mask ${isCVPage ? "opacity-100" : "opacity-0"} mask-circle absolute inset-0 transition-opacity duration-200 ease-in-out`}
              format="webp"
              width={300}
              height={300}
              src="/Avatar.png"
              alt="Avatar CV"
            />
          </div>
        </div>
      </a>
    </div>
    <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    <SideBarFooter />
